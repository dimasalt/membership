            Stripe.setPublishableKey(publishable_key);
        })();
    </script>



    <script type="text/javascript">
        $(function() {
            var $form = $('#payment-form');

            $form.submit(function(event) {

                // Check form validations first
                if(formValidationErrors() == false) {

                    // Disable the submit button to prevent repeated clicks:
                    $form.find('.submit').prop('disabled', true);

                    // Request a token from Stripe:
                    Stripe.card.createToken($form, stripeResponseHandler);
                }

                // Prevent the form from being submitted:
                return false;
            });

            // If person selects paypal payment
            $('input:radio[name="payment"]').change(function(){
                if($(this).val() == 'paypal'){
                   var url = $('#paypal_link').val();
                    //window.location.href = url;
                   window.location.replace(url);
                }
            });

        });


        function stripeResponseHandler(status, response) {
            // Grab the form:
            var $form = $('#payment-form');

            if (response.error) { // Problem!

                // Show the errors on the form:
                $form.find('.payment-errors').addClass('alert alert-danger');
                $form.find('.payment-errors').text(response.error.message);
                $form.find('.submit').prop('disabled', false); // Re-enable submission

            }
            else { // Token was created!

                // Get the token ID:
                var token = response.id;

                // Insert the token ID into the form so it gets submitted to the server:
                $form.append($('<input type="hidden" name="stripeToken">').val(token));

                // Submit the form:
                $form.get(0).submit();
            }
        }

        //checks user billing input
        function formValidationErrors()
        {
            var has_error = false;
            var error_text = '';

            // Clean state error div
            $('#validation_error').removeClass('alert alert-danger');
            $('#validation_error').text(error_text);

            // Check for empty fields
            if($('input[name="full_name"]').val().length == 0 ) {
                has_error = true;
                error_text = 'Full name is required and it is missing';
            }
            else if($('input[name="email"]').val().length == 0 ) {
                has_error = true;
                error_text = 'Email is required and it is missing';
            }
            else if($('input[name="address"]').val().length == 0 ) {
                has_error = true;
                error_text = 'Address is required and it is missing';
            }
            else if($('input[name="city"]').val().length == 0 ) {
                has_error = true;
                error_text = 'City is required and it is missing';
            }
            else if($('input[name="state"]').val().length == 0 ) {
                has_error = true;
                error_text = 'State/Province is required and it is missing';
            }
            else if($('input[name="zip_code"]').val().length == 0 ) {
                has_error = true;
                error_text = 'Zip code is required and it is missing';
            }
            else if($('select[name="country"]').val() == '- Select Country -' ) {
                has_error = true;
                error_text = 'Country is required and it is missing';
            }

            // Display error if there any empty forms
            if(has_error == true)
            {
                $('#validation_error').addClass('alert alert-danger');
                $('#validation_error').text(error_text);

                $form.find('.submit').prop('disabled', false); // Re-enable submission
            }

            //return false if no errors and true if yes
            return has_error;
        }

    </script>

